<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9ACAD1"
    tools:context=".AboutusActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Welcome to the Star Studio"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@color/purple_500"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is our latest Application lauched in Play Store
available for both Android and ios users. The main Motto of this app created by Star studio
team is to Maintain the Society System through a Simple Mobile Application
.All important Notice, Complain,many more is recorded through our application
.This application is created to make life easy of society peoples.
Everything is made easy to handle and Application is easy to use.
Thank you for being apart of our Family"
        android:textSize="24sp"
        android:textStyle="italic"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567894"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="5dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starstudio123@gmail.com"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developor"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Star Studio"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/star"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Star Studio"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textStyle="bold"
        />
</LinearLayout>